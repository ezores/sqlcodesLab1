<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Webflix.ViewModels"
             xmlns:views="clr-namespace:Webflix.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:MovieGridViewModel"
             x:Class="Webflix.Views.MovieGridView"
             Background="#262626">
   <Grid ColumnDefinitions=".3*,9.7*">
       <Button Grid.Column="0"
               Background="Black"
               Height="65"
               Width="65"
               Content="←"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               Margin="15,15,0,0"
               FontSize="35"
               FontWeight="Black"
               CornerRadius="100"
               Command="{Binding GoBackCommand}"/>
       <ListBox Grid.Column="1" 
                ItemsSource="{Binding SearchResults}" 
                SelectedItem="{Binding SelectedAlbum}"
                Background="Transparent" 
                Margin="0 20"
                HorizontalAlignment="Center">
           <ListBox.ItemsPanel>
               <ItemsPanelTemplate>
                   <WrapPanel />
               </ItemsPanelTemplate>
           </ListBox.ItemsPanel>
           <ListBox.ItemTemplate>
               <DataTemplate>
                   <Button Background="Black"
                           CornerRadius="8"
                           Padding="0,5">
                       <views:MovieTileView Margin="15,0"/>
                   </Button>
               </DataTemplate>
           </ListBox.ItemTemplate>
       </ListBox>
   </Grid>
</UserControl>
